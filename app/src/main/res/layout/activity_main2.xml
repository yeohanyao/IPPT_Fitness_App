<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.com.kaplan.ipptcalculator.Main2Activity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:background="@drawable/wallpaper2"
        android:src="@drawable/wallpaper2"
        app:srcCompat="@drawable/wallpaper2" />

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:weightSum="1"
      android:id="@+id/linearLayout">


      <TextView
          android:id="@+id/textView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_above="@+id/time"
          android:padding="20dp"
          android:text="1 Minutes Countdown Timer "
          android:textColor="@android:color/black"
          android:textSize="35dp" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="20dp"
          android:text="Test your fitness now with our 1 minute timer!"
          android:textColor="@android:color/black"
          android:textSize="20dp" />

  </LinearLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:textSize="50dp"
        tools:text="60" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Start"
        android:layout_below="@+id/time"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Cancel"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/start"
        android:layout_alignStart="@+id/start" />

</RelativeLayout>



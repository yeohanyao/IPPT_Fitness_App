<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.com.kaplan.ipptcalculator.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wallpaper1"
        android:src="@drawable/wallpaper1"
        app:srcCompat="@drawable/wallpaper1" />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">


        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/ipptbutton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@mipmap/running_launcher" />

            <TextView
                android:id="@+id/TextView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:padding="10dp"
                android:text="IPPT Calculator"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <Button
                android:id="@+id/timerbutton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:background="@mipmap/timer_launcher" />

            <TextView
                android:id="@+id/TextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:padding="10dp"
                android:text="1 Minute Timer"
                android:textColor="@android:color/black"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bmibutton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/TextView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:padding="10dp"
                android:text="BMI Calculator"
                android:textColor="@android:color/black"
                android:textSize="18dp" />

            <Button
                android:id="@+id/workoutButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:background="@mipmap/ic_workout" />

            <TextView
                android:id="@+id/TextView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:padding="10dp"
                android:text="Workout Proper Form"
                android:textColor="@android:color/black"
                android:textSize="18dp" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/TextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:ems="15"
        android:gravity="center"
        android:padding="10dp"
        android:text="Your One Stop Fitness Helper"
        android:textColor="@android:color/black"
        android:textSize="25dp" />

    <ProgressBar
        android:id="@+id/simpleProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/linearLayout2"
        android:max="100"
        android:visibility="invisible" />

</RelativeLayout>
